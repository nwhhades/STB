<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_bg">

    <ProgressBar
        android:id="@+id/pb_progress"
        style="@style/HorizontalProgressBar"
        android:layout_width="1000pt"
        android:layout_height="wrap_content"
        android:progress="50"
        android:theme="@style/HorizontalProgressBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.whiner.stblib.view.TvButton
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200pt"
        android:theme="@style/TvButton"
        android:text="下载"
        app:layout_constraintStart_toStartOf="@id/pb_progress"
        app:layout_constraintTop_toBottomOf="@id/pb_progress" />

    <com.whiner.stblib.view.TvButton
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200pt"
        android:theme="@style/TvButton"
        android:text="取消"
        app:layout_constraintEnd_toEndOf="@id/pb_progress"
        app:layout_constraintTop_toBottomOf="@id/pb_progress" />

</androidx.constraintlayout.widget.ConstraintLayout>